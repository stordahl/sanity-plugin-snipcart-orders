{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                           
    "jsx": "react",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,                                 
    "esModuleInterop": true,    
    "skipLibCheck": true                    
  },
  "include": [
    "./src/*.ts",
    "./src/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
